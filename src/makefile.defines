#########################
# application variables #
#########################
# Android Notes         #
#########################
# * Android domain and name cannot contain '-' or '_' characters
#########################
APP_COMPANY = t3-i
APP_NAME = live-studio-sessions
APP_BUNDLE_NAME = Live\ Studio\ Sessions
APP_VERSION = 0.1
APP_RELEASE = 1
APP_PUBLISHER = T\^3\ Software
APP_COPYRIGHT = Copyright\ (C)\ 2013\ T\^3\ Software
APP_ANDROID_PACKAGE = com.t3i.livestudiosessions
APP_URL = http://www.t3-i.com
APP_OBJECTS = rtk/io.o rtk/midi.o t3net/t3net.o modules/song_list.o \
              modules/song_audio.o modules/song.o modules/controller.o \
              modules/obfuscate.o modules/text_entry.o modules/profile.o \
              modules/gui.o main.o state.o state_game.o state_game_results.o \
              resources.o state_game_player.o state_title.o state_av_setup.o \
              state_song_list.o
APP_LIBS = -lmxml -lallegro_dialog$(LIB_SUFFIX)
#APP_CFLAGS = 

################
# global stuff #
################
GLOBAL_CFLAGS = -O2 -fomit-frame-pointer -funroll-loops -Wall -I. -DT3F_DEVELOPER_NAME="\"$(APP_COMPANY)\"" -DT3F_PACKAGE_NAME="\"$(APP_NAME)\"" -DT3F_APP_VERSION="\"$(APP_VERSION)\""

